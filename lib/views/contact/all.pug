extends ../shared/_layout

block content
  div.well
    if result.messages && result.messages.length > 0
      ul.list-group
        heading.row
          h3 Contact form messages
        
        each message in result.messages
          if !message.isDeleted
            li.list-group-item
              if message.author
                p= "Author: " + message.author
              else
                p= "Author: Anonymous"
              p= "Content: " + message.content

    else 
      p No messages have been submitted