doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        title Home
        link(rel="shortcut icon" href="/assets/images/favicon.png" type="image/x-icon")
        link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet" href="/stylesheets/material-kit.css")
        link(rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.css")
        link(rel="stylesheet" href="/stylesheets/hover.css")
        link(rel="stylesheet" href="/stylesheets/main.css")
        link(rel="stylesheet" href="/stylesheets/home.css")
        
    body
        include ../shared/_header.pug
        .homepage-hero-module
            .video-container
                video.home-video.fillWidth(autoplay loop)
                    source(src="/assets/media/mp4/We-Work-We-Wait.mp4" type="video/mp4")
                    source(src="/assets/media/webm/We-Work-We-Wait.webm" type="video/webm")
                    source(src="/assets/media/ogv/We-Work-We-Wait.ogv" type="video/ogv")
                .poster.hidden
                    img(src="assets/media/snapshots/We-Work-We-Wait.jpg" alt="poster-img")
                .video-overlay
                .title-container
                    .headline
                        h1 Paycheck
                        h3 Workflow has never been any smoother.
                    a.btn.btn-default.btn-lg(href="/sign-in" style="margin-right: 10px") Sign In
                    a.btn.btn-default.btn-lg(href="/sign-up") Sign Up
        include ../shared/_footer.pug
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/javascripts/home.js")