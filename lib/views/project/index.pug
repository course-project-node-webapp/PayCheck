extends ../shared/_layout

block content
  #wrapper
    if currentUser
      .panel.panel-default.col-lg-6.col-lg-offset-3
        .panel-heading.text-center
          .panel-header
            h3.display-4.m-b-2 Create Project
          .panel-body
            form(method='POST' action='/projects/create')
                label(for='name') Name
                input.form-control#projectname(type='text' name='name' minlength=6 maxlength=50 pattern= '[A-z0-9 ]+' title='Latin letters and digits only are allowed' required)
                label(for='description') Description
                input.form-control#projectdescription(type='text' name='description' minlength=10 maxlength=50 pattern= 'xxx[\x00-\x7F]+xxx+' title='Only ASCII characters are allowed' required)
                label(for='devSkills') Required Skills
                input.form-control#devskills(type='text' name='devSkills' minlength=2 maxlength=50 pattern= '[A-z0-9 ]+' title='Latin letters and digits only are allowed')
                label(for='managerName') Manager
                input.form-control#projectmanagername(type='text' name='managerName' minlength=6 maxlength=50 pattern= '[A-z0-9 ]+' title='Latin letters and digits only are allowed')
                label(for='employees') Employees
                input.form-control#projectemployees(type='text' name='employees' minlength=6 maxlength=50 pattern= '[A-z0-9 ]+' title='Latin letters and digits only are allowed')
                label(for='tasks') Tasks
                input.form-control#projecttasks(type='text' name='tasks' minlength=6 maxlength=50 pattern= '[A-z0-9 ]+' title='Latin letters and digits only are allowed')
                input(type='hidden' name='privacy' value='public')
                input(type='hidden' name='owner' value= result.user.username)
                button.btn.btn-success(type='submit') Submit
    else
      .row
        .col-md-6.col-md-offset-3
          h3.red You must be logged-in to create a project
            a.btn.btn-default.btn-lg(href="/account/login" style="margin-right: 10px") Sign In

  style(type="text/css").
    #wrapper {
      text-align: center;
      min-height: 60vh;
      margin: 5vh 0;
    }