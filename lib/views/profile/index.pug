extends ../shared/_layout

block stylesheets
  link(rel="stylesheet" href="/stylesheets/profile.css")
  link(rel="stylesheet" href="/stylesheets/progress-bar.css")

block content
  #profile
    if isAuthorized
      h2.capitalize My profile 
      a.btn.btn-default.btn.uppercase Edit
    else
      h2.capitalize #{result.userData.username}'s Profile
    .profile-header.profile-container
      .profile-header-top
        h3.capitalize #{result.userData.firstName} #{result.userData.lastName}
          br
          small.specialty.capitalize #{result.userData.specialization}
        img.img-rounded.img-responsive(src=result.userData.image)
      .rates
        .c100.dark.small(class="p" + result.userData.successRate)
          span #{result.userData.successRate}%
          .slice
            .bar
            .fill
      .overview
        h3.capitalize.container-header Overview
        span #{result.userData.description}
    .portfolio.profile-container
      h3.capitalize.container-header Project History
      ul.portfolio
        li.portfolio-item 
          h4 Sinoptik.bg
        li.add-item
