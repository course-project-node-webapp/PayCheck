extends ../shared/_layout

block stylesheets
  link(rel="stylesheet" href="/stylesheets/users.css")

block content
  #users-container
    each user in users
      .user-container.col-md-3.col-lg-3.col-sm-6.col-xs-12
        .left-user-container
          img.profile-picture(src=user.image)
        .right-user-container
          h3
            big: a.user-link(href="users/" + user._id)= user.username
            br
            small 
              i.material-icons work 
              span #{user.specialization}
            br
            small
              i.material-icons place
              span #{user.country}
          
block javascript