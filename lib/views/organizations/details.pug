extends ../shared/_layout

block content
  div.well#organization-details
    div.panel.panel-primary
      div.panel-heading
        h1= result.organization.name
        h1= result.organization.owner   

      div.panel-footer
        if !result.userRole
          a.btn.btn-success(href= "/organizations/" + result.organization._id + "/apply")
            p Apply to this organization
        else if result.userRole === 'owner'
          a.btn.btn-success(href= "/organizations/" + result.organization._id + "/employees") 
            p View Employees
          a.btn.btn-success(href= "/organizations/" + result.organization._id + "/projects") 
            p View Projects
